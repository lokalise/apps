{
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:import/recommended"
  ],
  "env": {
    "es6": true,
    "jest": true,
    "node": true
  },
  "plugins": ["prettier", "jest", "import"],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "import/order": [
      "warn",
      {
        "alphabetize": { "order": "asc" },
        "newlines-between": "always"
      }
    ]
  },
  "ignorePatterns": ["node_modules/"]
}
